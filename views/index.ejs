<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href="./stylesheets/lgis.css" />
  </head>
  <body>
    <div class="off-canvas-wrapper">
      <div class="off-canvas position-left" id="offCanvas" data-off-canvas data-transition="overlap">

        <button class="close-button" aria-label="Close menu" type="button" data-close>
          <span aria-hidden="true">&times;</span>
        </button>

        <input type="text" id="lgis-host">
        <input type="text" id="lgis-db">
        <input type="text" id="lgis-table">
        <button id="lgis-show-table">Show table</button>
      </div>

      <div class="off-canvas-content" data-off-canvas-content>
        <div class="title-bar">
          <div class="title-bar-left">
            <button class="menu-icon" type="button" data-open="offCanvasLeft" data-toggle="offCanvas"></button>
            <span class="title-bar-title">Foundation</span>
          </div>
        </div>
        <div id="map" class="map"></div>
      </div>
    </div>
    <script src="./javascripts/lgis.js"></script>
  </body>
</html>
